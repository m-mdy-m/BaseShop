<%- include('../includes/base.ejs') %> <%- include('../includes/header.ejs') %>
<main class="main">
  <% if(msgErr){ %>
  <h1 class="Error"><%= msgErr %></h1>
  <% } %>
  <form action="/new-password" method="post" class="forms">
    <div class="wrapperInput">
      <label for="password">password</label>
      <input type="text" class="input <%= validateErrors === 'password'?"invalid":''; %> " name="password" value="<%- oldValue.password%>"/>
    </div>
    <div class="wrapperInput">
        <label for="confirmPassword">confirm password</label>
        <input type="text" class="input <%= validateErrors === 'confirmPassword'?"invalid":''; %> " name="confirmPassword" value="<%- oldValue.confirmPassword%>"/>
      </div>
    <div>
      <button type="submit" class="btn">RESET PASSWORD</button>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <input type="hidden" name="token" value="<%- token %>">
    <input type="hidden" name="userId" value="<%- userId  %>">
  </form>
</main>
<%- include('../includes/end.ejs') %>
